@using WebMatrix.Data;

@{
    Layout = "~/inc/_layout.cshtml";



    if (IsPost)
    {
        string nome = Request["name"];
        string senha = Request["senha"];

        Database bd = Database.Open("Conexao");
        var dados = bd.Query("SELECT * FROM usuarios WHERE nome = @0 AND senha= @1", nome, senha);
        if (@dados.Count() != 0)
        {
            Session["user"] = nome;
            Response.Redirect("~/index.cshtml");
            
         }

            else
                    {
                        <p>As informações da conta estão erradas !</p>
                    }
            }

}
<form action="" method="post">

    <p>Nome:</p>
    <input type="Text" name="name" size="30" maxlength="15">
    <p>Senha:</p>
    <input type="password" name="senha" size="30" maxlength="15">
    <p></p>
    <input type="submit" name="submit" value="Entrar" />


</form>




























